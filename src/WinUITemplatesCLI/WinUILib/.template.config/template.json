{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "WinUILib1",
    "classifications": [
        "Library",
        "Windows",
        "WinUI"
    ],
    "identity": "VijayAnand.WinUILib",
    "groupIdentity": "VijayAnand.WinUITemplates.Library",
    "description": "A project template for WinUI 3 class library",
    "name": "WinUI 3 Class Library",
    "shortName": "winuilib",
    "sourceName": "WinUILib.1",
    "tags": {
        "language": "C#",
        "type": "project",
        "vs_parametersToHide": "no-solution-file"
    },
    "guids": [
        "9A19103F-16F7-4668-BE54-9A1E7A4F7556",
        "1C560DC6-4D31-42CC-9BFE-520100689835",
        "A98860A8-7DB8-4672-A24E-CC7C12A7656B"
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "datatype": "choice",
            "description": "Option to choose the Library target framework.",
            "choices": [
                {
                    "choice": "net6.0",
                    "description": "Target .NET 6",
                    "displayName": ".NET 6 (LTS)"
                },
                {
                    "choice": "net7.0",
                    "description": "Target .NET 7",
                    "displayName": ".NET 7 (STS)"
                },
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8",
                    "displayName": ".NET 8 (LTS)"
                },
                {
                    "choice": "net9.0",
                    "description": "Target .NET 9",
                    "displayName": ".NET 9 (Preview)"
                }
            ],
            "replaces": "DOTNET_TFM",
            "defaultValue": "net8.0"
        },
        "central-pkg-mgmt": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to configure NuGet Central Package Management (CPM).",
            "displayName": "Option to configure NuGet Central Package Management (CPM)"
        },
        "include-mvvm-toolkit": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If true, includes reference to the CommunityToolkit.Mvvm (aka Microsoft MVVM Toolkit) NuGet package."
        },
        "no-solution-file": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to skip creating a solution file."
        },
        "frameworkLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "Framework",
                "toLower": true
            }
        },
        "Net8OrLater": {
            "type": "computed",
            "value": "(frameworkLower == \"net8.0\" || frameworkLower == \"net9.0\")"
        },
        "AddMvvmToolkit": {
            "type": "computed",
            "value": "(include-mvvm-toolkit)"
        },
        "CentralPkgMgmt": {
            "type": "computed",
            "value": "(central-pkg-mgmt)"
        },
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "primaryOutputs": [
        {
            "path": "Class1.cs"
        }
    ],
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(no-solution-file || !(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\"))",
                    "exclude": [
                        "WinUILib.1.sln"
                    ]
                },
                {
                    "condition": "(!CentralPkgMgmt || !(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\"))",
                    "exclude": [
                        "Directory.Packages.props"
                    ]
                }
            ]
        }
    ]
}
