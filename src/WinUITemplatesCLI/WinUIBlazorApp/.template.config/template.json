{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "WinUIApp1",
    "classifications": [
        "Blazor",
        "Windows",
        "WinUI"
    ],
    "identity": "VijayAnand.WinUIApp.Blazor",
    "groupIdentity": "VijayAnand.WinUITemplates.App.Blazor",
    "description": "A project template for WinUI 3 Blazor App",
    "name": "WinUI 3 Blazor App",
    "shortName": "winui-blazor",
    "sourceName": "WinUIBlazorApp.1",
    "tags": {
        "language": "C#",
        "type": "solution",
        "vs_parametersToHide": "no-solution-file"
    },
    "guids": [
        "03cfa94b-a25c-4fa3-917f-101a8efac40f",
        "FAE04EC0-301F-11D3-BF4B-00C04F79EFBC",
        "2DFEBDDB-0E75-4461-9AC9-76483607B99E",
        "43174702-C7FA-4CB5-B96F-6C3035DAC71E"
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "datatype": "choice",
            "description": "Option to choose the App target framework.",
            "choices": [
                {
                    "choice": "net6.0",
                    "description": "Target .NET 6",
                    "displayName": ".NET 6 (LTS)"
                },
                {
                    "choice": "net7.0",
                    "description": "Target .NET 7",
                    "displayName": ".NET 7 (STS)"
                },
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8",
                    "displayName": ".NET 8 (LTS)"
                },
                {
                    "choice": "net9.0",
                    "description": "Target .NET 9",
                    "displayName": ".NET 9 (Preview)"
                }
            ],
            "replaces": "DOTNET_TFM",
            "defaultValue": "net8.0"
        },
        "use-slnx": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to use XML-based solution file (slnx).",
            "displayName": "Option to use XML-based solution file (sln_x)"
        },
        "central-pkg-mgmt": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to configure NuGet Central Package Management (CPM).",
            "displayName": "Use _NuGet Central Package Management (CPM)"
        },
        "application-id": {
            "type": "parameter",
            "description": "Overrides the App Identifier of the project",
            "datatype": "text",
            "defaultValue": "com.companyname.myappid"
        },
        "use-mvvm": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to use MVVM.",
            "displayName": "Option to use _MVVM"
        },
        "include-mvvm-toolkit": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If true, includes reference to the CommunityToolkit.Mvvm (aka Microsoft MVVM Toolkit) NuGet package.",
            "displayName": "Add CommunityToolkit.Mvvm (aka Microsoft MV_VM Toolkit) NuGet package reference"
        },
        "Unpackaged": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If true, configures the App as Unpackaged.",
            "displayName": "Configure the App as _Unpackaged"
        },
        "no-solution-file": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to skip creating a solution file."
        },
        "appIdLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "application-id",
                "toLower": true
            },
            "replaces": "com.companyname.myappid"
        },
        "xmlEncodedName": {
            "type": "derived",
            "datatype": "string",
            "replaces": "SAFE-NAME",
            "valueSource": "name",
            "valueTransform": "xmlEncode"
        },
        "nameLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "name",
                "toLower": true
            },
            "replaces": "myappid",
            "onlyIf": {
                "after": "appIdLower"
            }
        },
        "frameworkLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "Framework",
                "toLower": true
            }
        },
        "Net7": {
            "type": "computed",
            "value": "(frameworkLower == \"net7.0\")"
        },
        "Net8": {
            "type": "computed",
            "value": "(frameworkLower == \"net8.0\")"
        },
        "Net9": {
            "type": "computed",
            "value": "(frameworkLower == \"net9.0\")"
        },
        "Net7OrLater": {
            "type": "computed",
            "value": "(frameworkLower == \"net7.0\" || frameworkLower == \"net8.0\" || frameworkLower == \"net9.0\")"
        },
        "Net8OrLater": {
            "type": "computed",
            "value": "(frameworkLower == \"net8.0\" || frameworkLower == \"net9.0\")"
        },
        "AddMvvmToolkit": {
            "type": "computed",
            "value": "(include-mvvm-toolkit || use-mvvm)"
        },
        "CentralPkgMgmt": {
            "type": "computed",
            "value": "(central-pkg-mgmt)"
        },
        "Mvvm": {
            "type": "computed",
            "value": "(use-mvvm)"
        },
        "SolnFile": {
            "type": "computed",
            "value": "(!no-solution-file)"
        },
        "UseSlnx": {
            "type": "computed",
            "value": "(use-slnx)"
        },
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "primaryOutputs": [
        {
            "path": "App.xaml.cs"
        },
        {
            "path": "MainWindow.xaml.cs"
        }
    ],
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!SolnFile)",
                    "exclude": [
                        "WinUIBlazorApp.1.sln",
                        "WinUIBlazorApp.1.xml"
                    ]
                },
                {
                    "condition": "(UseSlnx)",
                    "exclude": [
                        "WinUIBlazorApp.1.sln"
                    ],
                    "rename": {
                        "WinUIBlazorApp.1.xml": "WinUIBlazorApp.1.slnx"
                    }
                },
                {
                    "condition": "(!UseSlnx)",
                    "exclude": [
                        "WinUIBlazorApp.1.xml"
                    ]
                },
                {
                    "condition": "(!Mvvm)",
                    "exclude": [
                        "**/ViewModels/*"
                    ]
                },
                {
                    "condition": "(!Net8 && !CentralPkgMgmt)",
                    "exclude": [
                        "Directory.Packages.props"
                    ]
                }
            ]
        }
    ]
}
