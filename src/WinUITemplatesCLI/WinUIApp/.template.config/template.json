{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "WinUIApp1",
    "classifications": [
        "Windows",
        "WinUI"
    ],
    "identity": "VijayAnand.WinUIApp",
    "groupIdentity": "VijayAnand.WinUITemplates.App",
    "description": "A project template for WinUI 3 App",
    "name": "WinUI 3 App",
    "shortName": "winui",
    "sourceName": "WinUIApp.1",
    "tags": {
        "language": "C#",
        "type": "solution",
        "vs_parametersToHide": "no-solution-file"
    },
    "guids": [
        "ee07a7a0-8e59-464e-87f4-d1ab46b70257",
        "FAE04EC0-301F-11D3-BF4B-00C04F79EFBC",
        "2DFEBDDB-0E75-4461-9AC9-76483607B99E",
        "43174702-C7FA-4CB5-B96F-6C3035DAC71E"
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "datatype": "choice",
            "description": "Option to choose the App target framework.",
            "choices": [
                {
                    "choice": "net6.0",
                    "description": "Target .NET 6",
                    "displayName": ".NET 6 (LTS)"
                },
                {
                    "choice": "net7.0",
                    "description": "Target .NET 7",
                    "displayName": ".NET 7 (STS)"
                },
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8",
                    "displayName": ".NET 8 (LTS)"
                },
                {
                    "choice": "net9.0",
                    "description": "Target .NET 9",
                    "displayName": ".NET 9 (Preview)"
                }
            ],
            "replaces": "DOTNET_TFM",
            "defaultValue": "net8.0"
        },
        "use-slnx": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to use XML-based solution file (slnx).",
            "displayName": "Option to use XML-based solution file (sln_x)"
        },
        "central-pkg-mgmt": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to configure NuGet Central Package Management (CPM).",
            "displayName": "Use _NuGet Central Package Management (CPM)"
        },
        "use-mvvm": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to use MVVM.",
            "displayName": "Option to use MVVM"
        },
        "include-mvvm-toolkit": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If true, includes reference to the CommunityToolkit.Mvvm (aka Microsoft MVVM Toolkit) NuGet package."
        },
        "Unpackaged": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If true, configures the App as Unpackaged."
        },
        "no-solution-file": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to skip creating a solution file."
        },
        "frameworkLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "Framework",
                "toLower": true
            }
        },
        "xmlEncodedName": {
            "type": "derived",
            "datatype": "string",
            "replaces": "SAFE-NAME",
            "valueSource": "name",
            "valueTransform": "xmlEncode"
        },
        "Net8OrLater": {
            "type": "computed",
            "value": "(frameworkLower == \"net8.0\" || frameworkLower == \"net9.0\")"
        },
        "AddMvvmToolkit": {
            "type": "computed",
            "value": "(include-mvvm-toolkit || use-mvvm)"
        },
        "CentralPkgMgmt": {
            "type": "computed",
            "value": "(central-pkg-mgmt)"
        },
        "Mvvm": {
            "type": "computed",
            "value": "(use-mvvm)"
        },
        "SolnFile": {
            "type": "computed",
            "value": "(!no-solution-file)"
        },
        "UseSlnx": {
            "type": "computed",
            "value": "(use-slnx)"
        },
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "primaryOutputs": [
        {
            "path": "App.xaml.cs"
        },
        {
            "path": "MainWindow.xaml.cs"
        }
    ],
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!SolnFile)",
                    "exclude": [
                        "WinUIApp.1.sln",
                        "WinUIApp.1.xml"
                    ]
                },
                {
                    "condition": "(UseSlnx)",
                    "exclude": [
                        "WinUIApp.1.sln"
                    ],
                    "rename": {
                        "WinUIApp.1.xml": "WinUIApp.1.slnx"
                    }
                },
                {
                    "condition": "(!UseSlnx)",
                    "exclude": [
                        "WinUIApp.1.xml"
                    ]
                },
                {
                    "condition": "(!Mvvm)",
                    "exclude": [
                        "**/ViewModels/*"
                    ]
                },
                {
                    "condition": "(!CentralPkgMgmt)",
                    "exclude": [
                        "Directory.Packages.props"
                    ]
                }
            ]
        }
    ]
}
